<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color -->
    <solid android:color="#441c4c" />

    <!-- Define the corner radius for rounded corners -->
    <corners
        android:radius="10dp" />

    <!-- Add a stroke around the shape -->
    <stroke
        android:width="2dp"
        android:color="#927E7E" />

    <!-- Add padding to the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
